<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Page</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Admin Page</h1>

  <!-- Form to Add Group -->
  <h2>Add Group</h2>
  <form action="/addGroup" method="POST">
    <label for="groupID">Group ID (e.g., 101 ABC):</label>
    <input type="text" id="groupID" name="_id" required><br>

    <label for="groupName">Group Name:</label>
    <input type="text" id="groupName" name="groupName" required><br>

    <label for="groupDescription">Description:</label>
    <textarea id="groupDescription" name="description"></textarea><br>

    <button type="submit">Add Group</button>
  </form>

  <!-- Form to Add Course -->
  <h2>Add Course</h2>
  <form action="/addCourse" method="POST">
    <label for="courseCode">Course Code:</label>
    <input type="text" id="courseCode" name="courseCode" required><br>

    <label for="courseName">Course Name:</label>
    <input type="text" id="courseName" name="courseName" required><br>

    <label for="instructor">Instructor Name:</label>
    <input type="text" id="instructor" name="instructor" required><br>

    <button type="submit">Add Course</button>
  </form>

  <h2>Existing Groups</h2>
  <ul>
    <% groups.forEach(group => { %>
      <li><strong><%= group._id %>:</strong> <%= group.groupName %> - <%= group.description %></li>
    <% }); %>
  </ul>

  <h2>Existing Courses</h2>
  <ul>
    <% courses.forEach(course => { %>
      <li><strong><%= course.courseCode %>:</strong> <%= course.courseName %> - <%= course.instructor %></li>
    <% }); %>
  </ul>
</body>
</html>
